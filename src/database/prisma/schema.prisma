datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          String   @id @default(uuid())
  title       String    @db.Text
  organizer   String    @db.Text
  location    String    @db.Text
  type        String    @db.Text
  createdAt   DateTime  @default(now()) @db.Timestamp(0)
  updatedAt   DateTime? @default(now()) @db.Timestamp(0)
  startDate   DateTime  @default(now()) @db.Timestamp(0)
  endDate     DateTime  @default(now()) @db.Timestamp(0)
  timezone    String    @db.Text
  summary     String?   @db.Text
  description String?   @db.Text
  image       String?   @db.Text
  userId      String
  User        User      @relation(fields: [userId], references: [id])

  @@index([userId], name: "user_fk")
}

model User {
  id        String  @id @default(uuid())
  firstName String  @db.VarChar(255)
  lastName  String  @db.VarChar(255)
  email     String  @unique @db.VarChar(255)
  password  String  @db.VarChar(255)
  role      Int
  verified  Boolean @default(false)

  events Event[]
  @@index([email], name: "email_index")
}

model VerifyEmail {
  hash      String   @unique
  timestamp DateTime
  email     String

  @@index([hash], name: "verifyEmail_hash_index")
}

model ResetPassword {
  hash      String   @unique
  timestamp DateTime
  email     String

  @@index([hash], name: "resetPassword_hash_index")
}
